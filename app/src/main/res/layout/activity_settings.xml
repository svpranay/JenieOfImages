<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingRight="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Size"
        android:id="@+id/tvSize"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:minWidth="150dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sizeSpinner"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/tvSize"
        android:layout_toEndOf="@+id/tvSize" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Image Type"
        android:id="@+id/tvImageType"
        android:layout_below="@+id/sizeSpinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:minWidth="150dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageTypeSpinner"
        android:layout_below="@+id/sizeSpinner"
        android:layout_toRightOf="@+id/tvImageType"
        android:layout_toEndOf="@+id/tvImageType" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Color"
        android:id="@+id/tvColor"
        android:layout_below="@+id/imageTypeSpinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:minWidth="150dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/colorSpinner"
        android:layout_alignTop="@+id/tvColor"
        android:layout_toRightOf="@+id/tvColor"
        android:layout_toEndOf="@+id/tvColor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Site"
        android:id="@+id/tvSite"
        android:layout_below="@+id/colorSpinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:minWidth="150dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etSite"
        android:layout_below="@+id/colorSpinner"
        android:layout_toRightOf="@+id/tvSite"
        android:layout_toEndOf="@+id/tvSite"
        android:text="Enter site "
        android:focusable="false"
        android:focusableInTouchMode="false" />
</RelativeLayout>